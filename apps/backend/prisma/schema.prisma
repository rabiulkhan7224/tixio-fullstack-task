

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat  = "cjs"
}

datasource db {
  provider = "postgresql"
  
}

enum Role {
  admin
  editor
  viewer
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  role      Role  @default(viewer)
  password  String
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
